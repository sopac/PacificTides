<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sopac.org.pacifictides">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />
                <data android:scheme="mailto" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListCountry"
            android:label="@string/title_activity_list_country"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListStation"
            android:label="@string/title_activity_list_station"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListMonth"
            android:label="@string/title_activity_list_month"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListWeek"
            android:label="@string/title_activity_list_week"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>